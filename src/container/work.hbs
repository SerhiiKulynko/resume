{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
     {{#with main}}  
    <main>
        <section>

             {{> title data="Work history" big=true}}

             <div>
                <ul>                
                   {{#each works}}
                    <li>
                        <div class="h5">{{position}}</div>

                        <br>

                            <div>
                                {{duration.from}} - 
                                {{#if duration.to}}
                                    {{duration.to}}
                                {{else}}
                                    (досі працюю)
                                {{/if}}
                            </div>

                        <br>

                        
                            <div class="h5">
                                {{company.name}}
                            </div>
                       

                        <br>

                        <br>

                        <div>
                            <strong>Projects ({{projectAmount}})</strong>
                        </div>

                        <br>

                        <ul>
                            {{#each projects}}
                                <li>
                                    <div>
                                        {{>link text=name href=url blank=true noLine=true}}
                                    </div>

                                    <div>
                                        <p>{{> title data="About work experience" big=false}}</p>
                                    </div>

                                    <div>
                                        <em>“Project stacks”({{stackAmount}})</em>
                                    </div>
                                    <br>

                                    <div>
                                        {{#each stacks}}
                                            <li>{{name}}</li>
                                        {{/each}}
                                    </div>
                                    <br>
                                    
                                    <div class="h6">
                                        <em>“Project awards”</em>
                                    </div>

                                    <br>                                    
                                    <div>
                                        {{#each awards}}
                                            <li>{{name}}</li>
                                        {{/each}}
                                    </div>                               

                                </li>
                            {{/each}}
                        </ul>

                    </li>
                    <br>
                   {{/each}}
                </ul>
                
             </div>
        </section>    
          

             
    </main> 
    {{/with}}  

</div>

