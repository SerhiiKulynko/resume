<main>
    <div class="row">        
            <div class="nav">
                {{#each navigation.links}}                   
                    {{#if href}}
                        <a href={{href}} target="_blank" 
                        class="nav-item nav-link col-3">
                        {{text}}
                        </a>
                    {{else}}
                        <a href={{href}} target="_blank" 
                        class="nav-item nav-link col-3 disabled">
                        {{text}}
                        </a>
                    {{/if}}
                {{/each}}               
            </div>        
    </div>
    {{>line}}
    <div class="row g-3">
        <section class="col-8">
            <div class="h3 mb-4">{{header}}</div>
            <div>
                {{#with contacts_data}}
                    <div class="h5 mb-3">{{title}}</div>
                    <div class="nav mb-5">
                        {{#each buttons}}
                            <div class="nav-item col-6">
                                {{#if isOutline}}
                                    <button class="btn btn-outline-warning">{{text}}</button>
                                {{/if}}
                                 {{#if isPrimary}}
                                    <button class="btn btn-warning text-light">{{text}}</button>
                                {{/if}}
                            </div>
                        {{/each}}
                    </div>
                    <div>
                        {{#with form.input}}
                            <div class="row g-2 gy-4">
                                    {{#with surname}}
                                    <div class="col-6">
                                        <label class="form-label">{{label}}</label>
                                        <input placeholder={{placeholder}} class="form-control">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                {{/with}}
                                    {{#with name}}
                                    <div class="col-6">
                                        <label class="form-label">{{label}}</label>
                                        <input placeholder={{placeholder}} class="form-control">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                {{/with}}
                                    {{#with phone}}
                                    <div class="col-6">
                                        <label class="form-label">{{label}}</label>
                                        <input placeholder={{placeholder}} class="form-control">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                {{/with}}
                                    {{#with email}}
                                    <div class="col-6">
                                        <label class="form-label">{{label}}</label>
                                        <input placeholder={{placeholder}} class="form-control">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                {{/with}}
                            </div>                            
                        {{/with}}   

                    </div>
                        {{>line}}
                    <div>
                        {{#each form.switch}}                            
                            <div class="form-check form-switch">
                                {{#if isActive}}
                                    <lable>{{text}}</lable>
                                    <input checked type="checkbox" 
                                    class="form-check-input active">
                                {{else}}
                                    <lable>{{text}}</lable>
                                    <input type="checkbox" 
                                    class="form-check-input disabled">
                                {{/if}}
                            </div>                            
                        {{/each}}
                    </div>                    
                {{/with}}                
          </div>
            {{>line}} 
            <div>
                {{#with delivery}}
                    <div class="h5">{{title}}</div>
                    <div class="card">
                        <div class="card-body row">   
                            {{#each select}}
                                <div class="col-6">
                                    <label class="form-label">{{label}}</label>
                                    <select class="form-select">
                                        {{placeholder}}
                                        <div>
                                            {{#each options}}
                                                <option value="value">{{text}}</option>
                                            {{/each}}
                                        </div>
                                    </select>
                                </div>
                            {{/each}}                     
                        </div>
                    </div>
                    <div class="mt-3">
                       {{#each delivery_type}}
                        <div class="form-check">
                            <lable class="form-check-label">{{type}}</lable>
                            <input type="checkbox" class="form-check-input">
                        </div>
                       {{/each}} 
                    </div>
                    {{>line}}
                    <div>
                        {{#with payment}}
                            <div class="h5">{{title}}</div>
                            <div>
                                {{#each list}}
                                    <div class="form-check">
                                        <lable class="form-check-label">{{type}}</lable>
                                        <input type="radio" class="form-check-input">
                                    </div>  
                                    <div class="mb-3">{{description}}</div>                                  
                                {{/each}}
                            </div>
                        {{/with}}
                    </div>
                    {{>line}}
                    <div>
                        {{#with contact}}
                            <div class="h5">{{title}}</div>
                            <div class="row g-2">
                                {{#with surname}}
                                    <div class="form-label col-6">
                                        <label>{{label}}</label>
                                        <input placeholder={{placeholder}} class="form-control">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                {{/with}}
                                  {{#with name}}
                                    <div class="form-label col-6">
                                        <label>{{label}}</label>
                                        <input placeholder={{placeholder}} class="form-control">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                {{/with}}
                                  {{#with phone}}
                                    <div class="form-label col-6">
                                        <label>{{label}}</label>
                                        <input placeholder={{placeholder}} class="form-control">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                {{/with}}
                                  {{#with email}}
                                    <div class="form-label col-6">
                                        <label>{{label}}</label>
                                        <input placeholder={{placeholder}} class="form-control">
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                {{/with}}                                
                            </div>
                        {{/with}}
                    </div>
                    {{>line}}
                    <div>
                        {{#with coment}}
                            <div class="form-label">  
                                <label class="mb-2">{{label}}</label>
                                <input placeholder={{placeholder}} class="form-control">                              
                            </div>                                                       
                        {{/with}}
                    </div>
                {{/with}}
            </div>  
            {{>line}}
            <div>
                {{#with coupon}}
                    <div class="h5">{{title}}</div>
                    <div>
                        {{#with select}}
                            <div class="mb-3">
                                {{#with availabel_coupon}}
                                    <div>
                                        <label class="form-label">{{label}}</label>
                                        <select class="form-select">
                                            <option selected>{{placeholder}}</option> 
                                            {{#each options}}                                                                                                   
                                                    <option value={{value}}>{{text}}</option>                                                
                                            {{/each}}                                        
                                        </select>
                                    </div>                                    
                                {{/with}}
                            </div>
                            <div class="mb-3">
                                {{#with friend_coupon}}
                                    <div>
                                        <label class="form-label">{{label}}</label>
                                        <select class="form-select">
                                            <option selected>{{placeholder}}</option>
                                            {{#each options}}                                                
                                                <option value={{value}}>{{text}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                {{/with}}
                            </div>
                        {{/with}}
                    </div>
                    <div>
                        {{#with add}}
                            <div>
                                {{#with friend}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control" placeholder={{placeholder}}>
                                    <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            <div>
                                {{#with colleague}}
                                    <label class="form-label">{{label}}</label>
                                    <input placeholder={{placeholder}} class="form-control">
                                    <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                        {{/with}}
                    </div>
                {{/with}}
            </div>  
            <div class="mt-4">
                {{#with quiz}}
                    <div class="h5">{{title}}</div>
                    <div>
                        {{#with preference}}
                            <div>{{title}}</div>
                            <div>
                                {{#each options}}
                                    <div class="form-check">
                                        <lable class="form-check-label">{{this}}</lable>
                                        <input class="form-check-input" type="radio">
                                    </div>
                                {{/each}}
                            </div>
                        {{/with}}
                    </div>
                    <div class="mt-3">
                        {{#with your_expirience}}
                            <div>
                                <label class="form-label">{{label}}</label>
                                <input class="form-control">
                            </div>
                        {{/with}}
                    </div>
                    <div class="mt-3">
                        {{#with purchase_frequency}}
                            <label class="form-label">{{label}}</label>
                            <select class="form-select">
                                {{#each options}}
                                    <option value={{value}}>{{text}}</option>
                                {{/each}}
                            </select>
                        {{/with}}
                    </div>
                    <div class="mt-3">
                        {{#with factors}}
                            <lable class="form-label">{{title}}</lable>
                            <div>
                                {{#each options}}
                                    <div class="form-check">
                                        <lable class="form-check-label">{{this}}</lable>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                {{/each}}
                            </div>
                        {{/with}}
                    </div>
                {{/with}}
            </div>               
        </section>
        <section class="col-4 g-2">            
                <div class="card">
                    <div class="card-body text-center">
                        {{#each action_block}}
                            {{#if isSuccess}}
                                <button class="btn btn-success my-1">{{text}}</button>
                            {{/if}}
                            {{#if isDanger}}
                                <button class="btn btn-danger my-1">{{text}}</button>
                            {{/if}}
                            {{#if isInfo}}
                                <button class="btn btn-info my-1">{{text}}</button>
                            {{/if}}
                         {{/each}}
                    </div>                   
                </div> 
                <div class="card">
                    <div class="card-body">
                        <div>
                            {{#with total}}
                                <div class="h4">{{title}}</div>
                                <div>
                                    {{#each item_list}}
                                        <div>{{name}} : {{price}}</div>
                                    {{/each}}
                                </div>
                                {{>line}}
                                <div>
                                    {{#each additional_info}}
                                        <div>{{text}} : {{value}}</div>
                                    {{/each}}
                                </div>
                                {{>line}}
                                <div>
                                    {{#with total_price}}
                                        <div>{{text}} : {{value}}</div>
                                    {{/with}}
                                </div>
                                {{>line}}
                                <div class="text-center">
                                    {{#each button}}
                                        <div class="m-2">
                                            {{#if isPrimary}}
                                                <button class="btn btn-primary">{{text}}</button>
                                            {{/if}}
                                        </div>
                                        <div class="m-2">
                                            {{#if isOutline}}
                                                <button class="btn btn-outline-primary ">{{text}}</button>
                                            {{/if}}
                                        </div>
                                    {{/each}}
                                </div>
                            {{/with}}
                        </div>
                    </div>
                </div>           
        </section>
    </div>
    {{>line}}
    <div class="row mt-4">
        {{#each footer}}
            <div class="nav col-2 text-sm">
                {{#each this}}
                    {{#if @last}}
                        <a href={{link}} target="_blank" 
                        class="nav-item nav-link disabled">{{text}}</a>
                    {{else}}
                            <a href={{link}} target="_blank" 
                        class="nav-item nav-link">{{text}}</a>
                    {{/if}}
                {{/each}}
            </div>
        {{/each}}
    </div> 
</main>
